{
  "manifest_version": 3,
  "name": "Screen Pet - Desktop Companions",
  "version": "1.0.0",
  "description": "Cute animated pets that wander around on your screen while you browse!",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://chrome.google.com/webstore/*"
      ],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "sprites/*",
      "p5.min.js",
      "extension-url.js",
      "init.js",
      "Pet.js",
      "Cat.js",
      "Cow.js",
      "Pig.js",
      "Chicken.js",
      "Horse.js",
      "Dragon.js",
      "Coin.js",
      "Item.js",
      "Store.js",
      "ScreenPetGame.js",
      "ScreenPetUI.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
